@page
@model ConsolasExito.App.Presentacion.Pages.CrudConsola.CreateModel

@{
    ViewData["Title"] = "Agregar consola";
}

<h1>Agregar</h1>

<h4>Consola</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Consola.Nombre" class="control-label"></label>
                <input asp-for="Consola.Nombre" class="form-control" />
                <span asp-validation-for="Consola.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Consola.Version" class="control-label"></label>
                <input asp-for="Consola.Version" class="form-control" />
                <span asp-validation-for="Consola.Version" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Consola.Fabricante" class="control-label"></label>
                <input asp-for="Consola.Fabricante" class="form-control" />
                <span asp-validation-for="Consola.Fabricante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Consola.CapacidadAlmacenamiento" class="control-label"></label>
                <input asp-for="Consola.CapacidadAlmacenamiento" class="form-control" />
                <span asp-validation-for="Consola.CapacidadAlmacenamiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Consola.TipoAlmacenamiento" class="control-label"></label>
                <select asp-for="Consola.TipoAlmacenamiento" class="form-control"></select>
                <span asp-validation-for="Consola.TipoAlmacenamiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Consola.VelocidadRam" class="control-label"></label>
                <input asp-for="Consola.VelocidadRam" class="form-control" />
                <span asp-validation-for="Consola.VelocidadRam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Consola.VelocidadProcesamiento" class="control-label"></label>
                <input asp-for="Consola.VelocidadProcesamiento" class="form-control" />
                <span asp-validation-for="Consola.VelocidadProcesamiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Consola.NumeroControles" class="control-label"></label>
                <input asp-for="Consola.NumeroControles" class="form-control" />
                <span asp-validation-for="Consola.NumeroControles" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Consola.FechaCompra" class="control-label"></label>
                <input asp-for="Consola.FechaCompra" class="form-control" />
                <span asp-validation-for="Consola.FechaCompra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Consola.FechaVenta" class="control-label"></label>
                <input asp-for="Consola.FechaVenta" class="form-control" />
                <span asp-validation-for="Consola.FechaVenta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Consola.PrecioCompra" class="control-label"></label>
                <input asp-for="Consola.PrecioCompra" class="form-control" />
                <span asp-validation-for="Consola.PrecioCompra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Consola.PrecioVenta" class="control-label"></label>
                <input asp-for="Consola.PrecioVenta" class="form-control" />
                <span asp-validation-for="Consola.PrecioVenta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Consola.TipoProducto" class="control-label"></label>
                <select asp-for="Consola.TipoProducto" class="form-control"></select>
                <span asp-validation-for="Consola.TipoProducto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
