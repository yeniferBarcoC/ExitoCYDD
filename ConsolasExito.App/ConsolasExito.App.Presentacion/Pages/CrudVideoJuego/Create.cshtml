@page
@model ConsolasExito.App.Presentacion.Pages.CrudVideoJuego.CreateModel

@{
    ViewData["Title"] = "Agregar videojuego";
}

<h1>Agregar</h1>

<h4>VideoJuego</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="VideoJuego.Nombre" class="control-label"></label>
                <input asp-for="VideoJuego.Nombre" class="form-control" />
                <span asp-validation-for="VideoJuego.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VideoJuego.Version" class="control-label"></label>
                <input asp-for="VideoJuego.Version" class="form-control" />
                <span asp-validation-for="VideoJuego.Version" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VideoJuego.Fabricante" class="control-label"></label>
                <input asp-for="VideoJuego.Fabricante" class="form-control" />
                <span asp-validation-for="VideoJuego.Fabricante" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="VideoJuego.EsMultiPlataforma" /> @Html.DisplayNameFor(model => model.VideoJuego.EsMultiPlataforma)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="VideoJuego.FechaCompra" class="control-label"></label>
                <input asp-for="VideoJuego.FechaCompra" class="form-control" />
                <span asp-validation-for="VideoJuego.FechaCompra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VideoJuego.FechaVenta" class="control-label"></label>
                <input asp-for="VideoJuego.FechaVenta" class="form-control" />
                <span asp-validation-for="VideoJuego.FechaVenta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VideoJuego.PrecioCompra" class="control-label"></label>
                <input asp-for="VideoJuego.PrecioCompra" class="form-control" />
                <span asp-validation-for="VideoJuego.PrecioCompra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VideoJuego.PrecioVenta" class="control-label"></label>
                <input asp-for="VideoJuego.PrecioVenta" class="form-control" />
                <span asp-validation-for="VideoJuego.PrecioVenta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VideoJuego.TipoProducto" class="control-label"></label>
                <select asp-for="VideoJuego.TipoProducto" class="form-control"></select>
                <span asp-validation-for="VideoJuego.TipoProducto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
