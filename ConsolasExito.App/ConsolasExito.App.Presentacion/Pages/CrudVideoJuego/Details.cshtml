@page
@model ConsolasExito.App.Presentacion.Pages.CrudVideoJuego.DetailsModel

@{
    ViewData["Title"] = "Detalles";
}

<!-- Responsive -->
<meta name="viewport" content="width=device-width, initial-scale=1">
<!--Fuente de letra: Montserrat-->
<link href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet'>


<link rel="stylesheet" href="~/css/index.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />


<body id="ver_detalles">
    <img id="logo" src="~/img/logo.png" class="img-fluid" onclick="location.href='Index'">
    <div class="seccion_login">
        <form class="pt-3 pb-3 seccion_login_2">
            <h1 style="text-align: center; margin-bottom:3%; margin-top: -2.5%;">Detalle videojuego</h1>
            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.VideoJuego.Nombre)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.VideoJuego.Nombre)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.VideoJuego.Version)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.VideoJuego.Version)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.VideoJuego.Fabricante)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.VideoJuego.Fabricante)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.VideoJuego.EsMultiPlataforma)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.VideoJuego.EsMultiPlataforma)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.VideoJuego.FechaCompra)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.VideoJuego.FechaCompra)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.VideoJuego.FechaVenta)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.VideoJuego.FechaVenta)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.VideoJuego.PrecioCompra)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.VideoJuego.PrecioCompra)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.VideoJuego.PrecioVenta)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.VideoJuego.PrecioVenta)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.VideoJuego.TipoProducto)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.VideoJuego.TipoProducto)
                </dd>
            </dl>
            <div class="col-md-12" >
                <a asp-page="./Edit" asp-route-id="@Model.VideoJuego.Id">Editar</a> |
                <a asp-page="./Index">Volver a la lista</a>
            </div>
        </form>
    </div>
</body>
