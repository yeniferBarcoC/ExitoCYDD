@page
@model ConsolasExito.App.Presentacion.Pages.CrudVideoJuego.IndexModel

@{
    ViewData["Title"] = "Agregar Video Juego";
}

<h1>Video juegos</h1>

<p>
    <a asp-page="Create">Agregar video juegos</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VideoJuego[0].Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VideoJuego[0].Version)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VideoJuego[0].Fabricante)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VideoJuego[0].EsMultiPlataforma)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VideoJuego[0].FechaCompra)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VideoJuego[0].FechaVenta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VideoJuego[0].PrecioCompra)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VideoJuego[0].PrecioVenta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VideoJuego[0].TipoProducto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.VideoJuego) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Version)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fabricante)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EsMultiPlataforma)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaCompra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaVenta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioCompra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioVenta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoProducto)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Detalles</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
