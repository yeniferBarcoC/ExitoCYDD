@page
@model ConsolasExito.App.Presentacion.Pages.CrudControl.DeleteModel

@{
    ViewData["Title"] = "Borrar control";
}

<!-- Responsive -->
<meta name="viewport" content="width=device-width, initial-scale=1">
<!--Fuente de letra: Montserrat-->
<link href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet'>


<link rel="stylesheet" href="~/css/index.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

<body id="borrar">
    <img id="logo" src="~/img/logo.png" class="img-fluid" onclick="location.href='Index'">
    <div class="seccion_login">
        <form class="pt-3 pb-3 seccion_login_2">
            <h1 style="text-align: center; margin-bottom:3%; margin-top: -2.5%;">Borrar Consola</h1>
            <dl class="row">
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.Control.TipoControl)
                </dt>
                <dd class="col-sm-7">
                    @Html.DisplayFor(model => model.Control.TipoControl)
                </dd>
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.Control.FechaCompra)
                </dt>
                <dd class="col-sm-7">
                    @Html.DisplayFor(model => model.Control.FechaCompra)
                </dd>
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.Control.FechaVenta)
                </dt>
                <dd class="col-sm-7">
                    @Html.DisplayFor(model => model.Control.FechaVenta)
                </dd>
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.Control.PrecioCompra)
                </dt>
                <dd class="col-sm-7">
                    @Html.DisplayFor(model => model.Control.PrecioCompra)
                </dd>
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.Control.PrecioVenta)
                </dt>
                <dd class="col-sm-7">
                    @Html.DisplayFor(model => model.Control.PrecioVenta)
                </dd>
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.Control.TipoProducto)
                </dt>
                <dd class="col-sm-7">
                    @Html.DisplayFor(model => model.Control.TipoProducto)
                </dd>
            </dl>
        </form>
        <form method="post" class="pt-3 pb-3 ">
            <input type="hidden" asp-for="Control.Id" />
            <input type="submit" value="Delete" class="btn btn-danger col-md-3" />
            <a asp-page="./Index" class="col-md-6">Volver a la lista</a>
        </form>
    </div>
</body>
